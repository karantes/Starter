<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">

	<http use-expressions="true">
		<csrf disabled="true" />
		<form-login login-page='/login.html'
			authentication-failure-url="/login.html?error=true"
			authentication-success-handler-ref="authenticationSuccessHandler" />
		<logout logout-url="/logout.html"
			logout-success-url="/login.html" />
	</http>


	<beans:bean id="authenticationSuccessHandler"
		class="br.arantes.admin.controller.UrlAuthenticationSuccessHandler" />

	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="bcrypt"></password-encoder>
			<jdbc-user-service data-source-ref="dataSource"
				authorities-by-username-query="select user.tx_email , role.tx_name  FROM adm_users user 
												inner join adm_users_adm_roles adm on adm.ADM_USERS_id = user.id
												inner join adm_roles role on role.id = adm.roles_id
												where user.tx_email = ?"
				users-by-username-query="select tx_email, tx_password, bl_enabled from ADM_USERS where tx_email = ?" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>